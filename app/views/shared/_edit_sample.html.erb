<%= simple_form_for [ @sample ] do |f| %>
  <div class="form-inline justify-items-center">
    <%= f.input :sample_name %>
    <span></span>
    <%= f.input :sample_type %>
    <span></span>
    <%= f.input :sample_matrix %>
  </div>
  <br>
  <div class="d-flex justify-content-center">
    <%= f.submit "Submit a sample", method: :update %>
    <%= link_to 'Back to samples', samples_path %>
  </div>
<% end %>
